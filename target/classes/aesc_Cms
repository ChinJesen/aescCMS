drop table if exists `roles_resources`;
create table `aesc_cms`.`resources_roles`(
  `resourcesId` int not null comment'资源id',
  `roleId` int not null comment'角色id'
)
engine=innodb
default character set=utf8
comment'角色资源关系表';

